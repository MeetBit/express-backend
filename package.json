{
  "name": "@meetbit/express-backend",
  "version": "1.0.10",
  "description": "Boilerplate for an ExpressJS backend server complete with live-reloading, logger, default utils & middleware, and a modular file structure.",
  "author": {
    "name": "meetbit",
    "email": "hello@meetbit.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MeetBit/express-backend"
  },
  "publishConfig": {
    "@meetbit:registry": "https://npm.pkg.github.com/"
  },
  "bin": "./bin/cli.js",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "test": "jest --forceExit"
  },
  "imports": {
    "#root/*": "./*",
    "#controllers/*": "./controllers/*/index.js",
    "#middlewares/*": "./middlewares/*/index.js",
    "#public/*": "./public/*/index.js",
    "#routes/*": "./routes/*/index.js",
    "#tests/*": "./tests/*/index.js",
    "#utils/*": "./utils/*/index.js"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ]
  },
  "jest": {
    "runner": "groups",
    "moduleNameMapper": {
      "#root/(.*)": "<rootDir>/$1",
      "#controllers/(.*)": "<rootDir>/controllers/$1",
      "#middlewares/(.*)": "<rootDir>/middlewares/$1",
      "#public/(.*)": "<rootDir>/public/$1",
      "#routes/(.*)": "<rootDir>/routes/$1",
      "#tests/(.*)": "<rootDir>/tests/$1",
      "#utils/(.*)": "<rootDir>/utils/$1"
    }
  },
  "dependencies": {
    "aws-sdk": "^2.1087.0",
    "axios": "^0.26.0",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "helmet": "^5.0.2",
    "http-errors": "^2.0.0",
    "nanoid": "^3.3.1",
    "response-time": "^2.3.2",
    "statuses": "^2.0.1",
    "winston": "^3.6.0",
    "winston-cloudwatch": "^3.1.1"
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "jest-runner-groups": "^2.1.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2"
  }
}